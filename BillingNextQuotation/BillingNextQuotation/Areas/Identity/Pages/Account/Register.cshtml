@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-9">
        <form asp-route-returnUrl="@Model.ReturnUrl" enctype="multipart/form-data" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon2">&plus;91</span>
                    </div>
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" aria-describedby="basic-addon2">
                </div>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserName" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Input.UserName" class="form-control" placeholder="Username" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <span class="input-group-text" id="basic-addon2">&commat;bnquotation.sys</span>
                    </div>
                </div>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ProfilePic" class="control-label"></label>
                <input asp-for="Input.ProfilePic" type="file" accept="image/x-png,image/jpeg" class="form-control" />
                <span asp-validation-for="Input.ProfilePic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhysicalAddress"></label>
                <input asp-for="Input.PhysicalAddress" class="form-control" />
                <span asp-validation-for="Input.PhysicalAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Roles"></label>
                <select asp-for="Input.Roles" asp-items="Html.GetEnumSelectList<BillingNextQuotation.Enums.Roles>()" class="form-control"></select>
                <span asp-validation-for="Input.Roles" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;" id="customer_cat_div">
                <label asp-for="Input.CustomerCategory"></label>
                <select asp-for="Input.CustomerCategory" asp-items="Html.GetEnumSelectList<BillingNextQuotation.Enums.CustomerCategory>()" class="form-control"></select>
                <span asp-validation-for="Input.CustomerCategory" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
    document.getElementById("Input_Roles").onchange = function(e) {
        if ((this[this.selectedIndex].text) == "Dealers") {
            document.getElementById("customer_cat_div").style.display = 'block';
             var select = document.getElementById("Input_CustomerCategory");
             $("#Input_CustomerCategory option[value='0']").remove();
        }
        else {
            document.getElementById("customer_cat_div").style.display = 'none';
        }
};
</script>
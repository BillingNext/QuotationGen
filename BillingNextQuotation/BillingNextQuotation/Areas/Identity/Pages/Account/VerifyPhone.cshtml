@page
@model BillingNextQuotation.Areas.Identity.Pages.Account.VerifyPhoneModel
@{
    ViewData["Title"] = "Verify Phone";
    Layout = "_LayoutLogout";
}
<h1>@ViewData["Title"]</h1>
<div>
    <form method="post">
        <p>Enter the verify Token received as SMS here:</p><br>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Input.Code" class="form-control" />
            <span asp-validation-for="Input.Code" class="text-danger"></span>
        </div>
        <input type="submit" value="Verify" class="btn btn-default" />
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@page "{id}"
@model BillingNextQuotation.Areas.Identity.Pages.Account.Manage.Admin.DeleteModel

@{
    Layout = "/Areas/Identity/Pages/Account/Manage/Admin/_Layout.cshtml";
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuotationUser.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuotationUser.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuotationUser.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuotationUser.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuotationUser.RoleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuotationUser.RoleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuotationUser.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuotationUser.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuotationUser.PhysicalAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuotationUser.PhysicalAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuotationUser.CustomerCatagory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuotationUser.CustomerCatagory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuotationUser.ProfilePic)
        </dt>
        <dd class="col-sm-10">
            @if (Model.QuotationUser.ProfilePicture != null)
            {
                <img class="img-responsive full-width" style="width:50%; height:50%;" src="data:image/png;base64,@Convert.ToBase64String(Model.QuotationUser.ProfilePicture)" /><br>
            }
            else
            {
                <img class="img-responsive full-width" style="width:50%; height:50%;" src="~/elements/FrontendDecorators/img/user2-160x160.jpg"/><br>
            }
        </dd>

    </dl>
    <form method="post">
        <input type="hidden" asp-for="QuotationUser.UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> &verbar;
        @{
            if (!Model.IsLockedOut)
            {
                <input type="submit" asp-page-handler="DisableUser" value="Lockout Instead" class="btn btn-warning" /> <d>&verbar;</d>
            }
        }
        <a asp-page="./Index">Back to User List</a>
    </form>
</div>

@page "{id}"
@model BillingNextQuotation.Quotation.Admin.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Quotation12</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quotation.QuotationNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quotation.QuotationNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quotation.QuotationTo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quotation.QuotationTo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quotation.QuotationAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quotation.QuotationAmount)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Quotation.QuotationId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> &verbar;
        @{
            if (Model.Quotation.QuotationStatus != Enums.QuotationStatus.Discarded)
            {
                <input type="submit" asp-page-handler="Discard" value="Discard Instead" class="btn btn-warning" /> <d>&verbar;</d>
            }
        }
        <a asp-page="/Quotation/Admin/Index">Back to List</a>
    </form>
</div>
